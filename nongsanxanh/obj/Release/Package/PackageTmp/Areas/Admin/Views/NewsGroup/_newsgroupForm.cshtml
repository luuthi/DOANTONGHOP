@model Bussiness.ViewModel.NewsGroupViewModel
<div class="row" style="margin-bottom:5px; margin-right:0px;">
    @Html.ActionLink("Quay lại", "Index", "NewsGroup", null, new { @class = "btn btn-default", @style = "float:right; margin-right: 20px; margin-top: 10px" })
</div>
<div class="box-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.NameGroup)
                @Html.TextBoxFor(m => m.NameGroup,  new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.NameGroup)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.RadioButtonFor(m => m.Status, true, new { @class = "flat-red", @id = "rd_yes" }) : Hoạt động
                @Html.RadioButtonFor(m => m.Status, false, new { @class = "flat-red", @id = "rd_no" }): Vô hiệu hóa
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>

    </div>
    <div class="row" style="float: right; padding-right: 20px">
        <button type="submit" class="btn btn-primary submit_add_post ">Ghi lại</button>
    </div>
    <!-- /.panel-body -->
</div>
