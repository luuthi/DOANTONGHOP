@model List<Bussiness.ViewModel.ProductViewModel>
@using NSX_Common;
@if (Model[0].ProductName != null)
{
    <div class="vegetables">
        <div class="title-vegetable clearfix">
            <h1 class="pull-left">@Model[0].GroupName</h1>
            <a href="/Products/@Extentions.ToUnsignLinkString(@Model[0].GroupName)" class="pull-right">Xem thêm<strong class="mdi mdi-arrow-right"></strong> </a>
        </div>
        <div class="category-products clearfix">
            @{
                foreach (var item in Model)
                {
                    <div class="col-md-3 col-lg-3 col-sm-6 col-xs-6 sell-img ">
                        <div class="sell-inner">
                            <a href="/Products/@Extentions.ToUnsignLinkString(@Model[0].GroupName)/@item.Id">
                                <img src="~/Images/images/san-pham/@item.Image" class="img-responsive">
                            </a>
                            <div class="details-item">
                                <div class="pro-details">
                                    <a href="/Products/@Extentions.ToUnsignLinkString(@Model[0].GroupName)/@item.Id">
                                        <span class="mdi mdi-magnify mdi-18px ">  Chi tiết sản phẩm</span>
                                    </a>
                                </div>
                                <div class=" pro-cart">
                                    <a href="javascript:void(0)" data-id="@item.Id" class="pro-cart">
                                        <span class="mdi mdi-shopping mdi-18px">  Thêm vào giỏ hàng</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="sell-info text-center">
                            <h5>@item.ProductName</h5>
                            <span><strong><i>@Extentions.ToCurrencyString(Convert.ToInt32((@item.Price)))</i></strong></span>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
                }
                else
                {
                    <div class="vegetables">
                        <div class="title-vegetable clearfix">
                            <h1 class="pull-left">@Model[0].GroupName</h1>
                        </div>
                        <div class="category-products clearfix">
                            <h4 class="text-danger" style="margin-left:20px;"> Không có dữ liệu</h4>
                        </div>
                    </div>
                }
<script>
    $(document).ready(function () {
        $(document).on("click",
            ".pro-cart",
            function () {
                var id = $(this).attr("data-id");
                $.ajax({
                    type: "POST",
                    url: '/ShoppingCart/AddProductToCart/',
                    data: { productid: id, soluong: 1 },
                    success: function (r) {
                        $(".content-header .navbar  #cart").empty();
                        $(".content-header .navbar  #cart").append(r.listpro);
                        console.log(r);
                    },

                    error: function (req, status, error) {
                    }
                });
            });

    });
</script>