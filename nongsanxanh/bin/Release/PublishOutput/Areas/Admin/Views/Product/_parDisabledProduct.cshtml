@model List<Bussiness.ViewModel.ProductViewModel>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h2>
                    Danh sách nhóm tin tức đã bị hủy
                </h2>
            </div>

            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Tên nhóm sản phẩm</th>
                            <th>Giá/Đơn vị tính</th>
                            <th>Nhà cung cấp</th>
                            <th>Tình trạng</th>
                            <th style="width: 200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="~/Images/images/san-pham/@item.Image" alt="@item.ProductName" width="50px" height="50px" class="img-responsive text-center" /> </td>
                                        <td>@item.ProductName</td>
                                        <td>@item.GroupName</td>
                                        <td>@item.Price / @item.Unit </td>
                                        <td>@item.Vendor</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a data-id="@item.Id" type="button" class="btn btn-success btn-sm Restore">Khôi phục</a>
                                            <a data-id="@item.Id" type="button" class="btn btn-danger btn-sm Del">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>

            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default pull-right " data-dismiss="modal">Đóng</button>
            </div>
        </div>
        <!-- /.panel-body -->

    </div>
    <!-- /.panel -->

</div>

