@model Bussiness.ViewModel.AccountViewModel
<div class="page-header" style="background-image: url(/Images/images/slide/gioi-thieu.jpeg);">
    <div class="container">
        <div class="row">
            <div class="title-header">
                <span>Thông tin tài khoản</span>
            </div>
        </div>
    </div>
</div>
<!-- end page-header -->
<main>
    <div class="current-page">
        <div class="container">
            <ul class="pull-left">
                <li><a href="">Trang Chủ</a></li>
                <li>/</li>
                <li>Thông tin cá nhân</li>
            </ul>
        </div>
    </div>
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    @using (Html.BeginForm("Edit", "AccountInfo", FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <div class="box box-body" style="margin-top: 40px">
                            <div class="row">

                                <div class="form-group">
                                    @Html.LabelFor(m => m.FullName)
                                    @Html.TextBoxFor(m => m.FullName, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.FullName)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Gender)
                                    @Html.RadioButtonFor(m => m.Gender, true, new {@class = "flat-red", @id = "rd_nam"}) :Nam
                                    @Html.RadioButtonFor(m => m.Gender, false, new {@class = "flat-red", @id = "rd_nu"}):Nữ
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Birthday)
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="mdi mdi-calendar"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.Birthday, new {@class = "form-control", @id = "datepicker"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PhoneNumber)
                                    @Html.TextBoxFor(m => m.PhoneNumber, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address)
                                    @Html.TextBoxFor(m => m.Address, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Address)
                                </div>
                                <div class="form-group text-center">
                                    @Html.TextBoxFor(m => m.Image, new {@class = "hide"})
                                    <img src="~/Images/images/user-logo/@Model.Image" class="img-circle " id="Image1" width="200" height="200"/>
                                    <br/>
                                    <label class="p" for="filePosted" style="text-decoration: underline; cursor: pointer">Tải ảnh lên...</label>
                                    <input type="file" id="filePosted" name="filePosted" accept="image/gif, image/jpeg, image/png" class="hide" onchange="readUrl(this);"/>
                                </div>

                            </div>
                            <div class="row" style="float: right; padding-right: 20px">
                                <button type="submit" class="btn btn-primary submit_add_post ">Ghi lại</button>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    }}
                </div>

                <div class="col-lg-3 col-md-3">
                    <div class="widget">
                        @Html.Partial("_parDanhMucTin")
                        @Html.Partial("_parHotNewRight")
                        <div class="fanpage">
                            <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fquapho.net%2F&tabs=S%E1%BB%B1%20ki%E1%BB%87n&width=255px&height=214&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId" width="255px" height="214" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    function readUrl(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#Image1')
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
