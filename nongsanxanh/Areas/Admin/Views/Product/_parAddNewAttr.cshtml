@model Bussiness.ViewModel.ProductAttributeViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h2>
                    Thêm mới thuộc tính
                </h2>
            </div>

            <div class="box-body">
                <span class="field-validation-error err-attr"></span>
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.AttributeName)
                    @Html.TextBoxFor(m => m.AttributeName, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AttributeType)
                    @Html.TextBoxFor(m => m.AttributeType, new {@class = "form-control"})
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default pull-right " data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success pull-right btnSaveAttr" style="margin-right: 10px" >Lưu</button>
            </div>
        </div>
        <!-- /.panel-body -->

    </div>
    <!-- /.panel -->

</div>
