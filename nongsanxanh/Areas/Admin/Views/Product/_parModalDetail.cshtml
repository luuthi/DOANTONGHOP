@model List<Bussiness.ViewModel.ProductAttributeValueViewModel>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h2>
                    Thông tin cho tiết sản phẩm
                </h2>
            </div>
            <div class="box-body">
                <a class="btn btn-success btn-sm btn-them" style="margin-bottom: 10px; float: right; margin-right: 10px"><i class="mdi mdi-plus mdi-16px">Thêm thuộc tính</i></a>
                <table id="example1" class="table table-bordered table-striped tblAttrVal">
                    <thead>
                    <tr>
                        <th class="hide">Id</th>
                        <th colspan="2">Thuộc tính</th>
                        <th>Giá trị</th>
                        <th style="width: 80px">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr></tr>
                    @{
                        foreach (var item in @Model)
                        {
                            @Html.Partial("_parAttrValPro", @item)
                        }
                    }

                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default pull-right " data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

