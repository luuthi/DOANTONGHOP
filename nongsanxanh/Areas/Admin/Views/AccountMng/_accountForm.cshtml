@model Bussiness.ViewModel.AccountViewModel
<div class="row" style="margin-bottom:5px; margin-right:0px;">
    @Html.ActionLink("Quay lại", "Index", "AccountMng", null, new { @class = "btn btn-default", @style = "float:right; margin-right: 20px; margin-top: 10px" })
</div>
<div class="box-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group pass">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GroupAccId)
                @Html.DropDownListFor(m => m.GroupAccId, ViewData["GroupAccId"] as SelectList, new { @class = "form-control select2" })
                @Html.ValidationMessageFor(m => m.GroupAccId)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FullName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Gender)
                @Html.RadioButtonFor(m => m.Gender, true, new { @class = "flat-red", @id = "rd_nam" }) :Nam
                @Html.RadioButtonFor(m => m.Gender, false, new { @class = "flat-red", @id = "rd_nu" }):Nữ
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Birthday)
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="mdi mdi-calendar"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", @id = "datepicker" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TypeAccount)
                @Html.RadioButtonFor(m => m.TypeAccount, true, new { @class = "flat-red", @id = "rd_admin" }) :Admin
                @Html.RadioButtonFor(m => m.TypeAccount, false, new { @class = "flat-red", @id = "rd_customer" }) :Customer
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.RadioButtonFor(m => m.Status, true, new { @class = "flat-red", @id = "rd_admin" }) :Kích hoạt
                @Html.RadioButtonFor(m => m.Status, false, new { @class = "flat-red", @id = "rd_customer" }) :Vô hiêu hóa
            </div>
            <div class="form-group text-center">
                @Html.TextBoxFor(m => m.Image, new { @class = "hide" })
                <img src="~/Images/@Model.Image" class="img-circle " id="Image1" width="200" height="200" />
                <br />
                <label class="p" for="filePosted" style="text-decoration: underline; cursor: pointer">Tải ảnh lên...</label>
                <input type="file" id="filePosted" name="filePosted" accept="image/gif, image/jpeg, image/png" class="hide" onchange="readUrl(this);" />
            </div>
            <div class="form-group">

            </div>
        </div>

    </div>
    <div class="row" style="float: right; padding-right: 20px">
        <button type="submit" class="btn btn-primary submit_add_post ">Ghi lại</button>
    </div>
    <!-- /.panel-body -->
</div>
<script>
    function readUrl(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#Image1')
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

</script>
