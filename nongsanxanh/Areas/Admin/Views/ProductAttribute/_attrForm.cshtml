@model Bussiness.ViewModel.ProductAttributeViewModel
<div class="row" style="margin-bottom:5px; margin-right:0px;">
    @Html.ActionLink("Quay lại", "Index", "ProductAttribute", null, new { @class = "btn btn-default", @style = "float:right; margin-right: 20px; margin-top: 10px" })
</div>
<div class="box-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.AttributeName)
                @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AttributeName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.RadioButtonFor(m => m.Status, true, new { @class = "flat-red", @id = "rd_active" }) :Hoạt động
                @Html.RadioButtonFor(m => m.Status, false, new { @class = "flat-red", @id = "rd_disable" }):Vô hiệu hóa
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12" style="text-align: right; padding-right: 20px">
            <button type="submit" class="btn btn-primary submit_add_post ">Ghi lại</button>
        </div>
        <!-- /.panel-body -->
    </div>
</div>
