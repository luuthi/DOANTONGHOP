@model Bussiness.ViewModel.LoginViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="box box-success">
            <div class="box-header with-border" style="background-color: #88be4c">
                <h2 style="color: #fff">
                    Đăng nhập
                </h2>
            </div>
            <div class="box-body">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m=>m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                </div>
                <div class="row" style="float: right; padding-right: 20px">
                    <button type="submit" class="btn btn-success" id="btnLogin">Đăng nhập</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Đóng</button>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</div> 
<script>
    $(document).ready(function() {
        $(document).on("click",
            "#btnLogin",
            function () {
                var username = $("#UserName").val();
                var pass = $("#Password").val();
                $.ajax({
                    url: '/Home/Login',
                    type: "POST",
                    data: {UserName: username,Password:pass },
                    success: function (r) {
                        if (r.Status == true) {
                            window.location.href = "/Home";
                        }
                        else {
                            $("#detail-account").empty();
                            $("#detail-account").append(r.Html);
                        }
                    }
                });
            });
    })
</script>
